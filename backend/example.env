# Keycloak (replace with your real values)
KEYCLOAK_ISSUER=https://your-keycloak-host/realms/your-realm
KEYCLOAK_AUDIENCE=your-client-id
KEYCLOAK_JWKS_URL=https://your-keycloak-host/realms/your-realm/protocol/openid-connect/certs

# Database (dev defaults match docker-compose; change user/password/host for prod)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@127.0.0.1:5432/appdb

# Postgres bootstrap (docker-compose `db` service)
POSTGRES_USER=postgres
POSTGRES_PASS=postgres
POSTGRES_DB=appdb

# Redis / Celery
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1

# Logging
MYBUDDY_LOG_LEVEL=INFO
# Log directory for rotated file logs (used by api/celery/beat). Relative to backend/ when using start.sh.
MYBUDDY_LOG_DIR=./logs
# One of: api, celery, beat (start.sh sets this automatically per process)
MYBUDDY_LOG_TARGET=api
# Enable console logs in addition to file logs (default true if unset). Console level is WARNING.
MYBUDDY_ENABLE_CONSOLE_LOGS=true

MYBUDDY_LOG_REQUEST_BODIES=false
MYBUDDY_LOG_RESPONSE_BODIES=false
MYBUDDY_LOG_SLOW_REQUEST_MS=1000

# Maximum auto-generated flashcards per subject/age/difficulty combination
MAX_AUTO_FLASHCARDS=200

# AI API INFO
FLASHCARD_API_KEY=your-openai-api-key
FLASHCARD_API_BASE=https://api.openai.com/v1
FLASHCARD_API_MODEL=gpt-5-mini

# Images URL
BACKEND_IMG_URL=https://mybuddy-and-me.com/img

# How long to wait before allowing content expansion deduplication again (in minutes)
CONTENT_EXPANSION_DEDUPE_BUCKET_MINUTES=1