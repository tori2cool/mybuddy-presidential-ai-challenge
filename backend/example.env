# Logging
# Log level for application logs (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MYBUDDY_LOG_LEVEL=INFO
# Threshold in milliseconds after which a request is considered "slow"
MYBUDDY_LOG_SLOW_REQUEST_MS=500
# Whether to log full HTTP request bodies at DEBUG level
MYBUDDY_LOG_REQUEST_BODIES=false
# Whether to log full HTTP response bodies at DEBUG level
MYBUDDY_LOG_RESPONSE_BODIES=false

# Keycloak (replace with your real values)
KEYCLOAK_ISSUER=https://your-keycloak-host/realms/your-realm
KEYCLOAK_AUDIENCE=your-client-id
KEYCLOAK_JWKS_URL=https://your-keycloak-host/realms/your-realm/protocol/openid-connect/certs

# Database (dev defaults match docker-compose; change user/password/host for prod)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/appdb

# Postgres bootstrap (docker-compose `db` service)
POSTGRES_USER=postgres
POSTGRES_PASS=postgres
POSTGRES_DB=appdb

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
