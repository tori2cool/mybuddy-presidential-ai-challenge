# Base URL for the backend API (Expo public env var)
EXPO_PUBLIC_API_BASE_URL=https://mybuddy.suknet.org/api/

# Legacy (non-Expo) name; keep for compatibility with older tooling if needed
# API_BASE_URL=https://mybuddy.suknet.org/api/

# Enable API client debug logging (method/url/status/duration). Avoids logging auth headers/bodies.
EXPO_PUBLIC_DEBUG_API=false

# Frontend / Expo - Keycloak configuration
EXPO_PUBLIC_KEYCLOAK_ISSUER=https://id.suknet.org
EXPO_PUBLIC_KEYCLOAK_REALM=suknet
EXPO_PUBLIC_KEYCLOAK_CLIENT_ID=mybuddy.suknet
EXPO_PUBLIC_KEYCLOAK_REDIRECT_URI=mybuddy://redirect

# Images URL
EXPO_PUBLIC_BACKEND_IMG_URL=https://mybuddy-and-me.com/img