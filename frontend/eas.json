{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },

    "preview": {
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false },
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://mybuddy-and-me.com/api",

        "EXPO_PUBLIC_KEYCLOAK_ISSUER": "https://sso.idanow.org",
        "EXPO_PUBLIC_KEYCLOAK_REALM": "mybuddy",
        "EXPO_PUBLIC_KEYCLOAK_CLIENT_ID": "mybuddy.com",
        "EXPO_PUBLIC_KEYCLOAK_REDIRECT_URI": "mybuddy://redirect",

        "EXPO_PUBLIC_BACKEND_IMG_URL": "https://mybuddy-and-me.com/img",
        "EXPO_PUBLIC_DEBUG_API": "true"
      }
    },

    "production": {
      "autoIncrement": true,
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://mybuddy-and-me.com/api",

        "EXPO_PUBLIC_KEYCLOAK_ISSUER": "https://sso.idanow.org",
        "EXPO_PUBLIC_KEYCLOAK_REALM": "mybuddy",
        "EXPO_PUBLIC_KEYCLOAK_CLIENT_ID": "mybuddy.com",
        "EXPO_PUBLIC_KEYCLOAK_REDIRECT_URI": "mybuddy://redirect",

        "EXPO_PUBLIC_BACKEND_IMG_URL": "https://mybuddy-and-me.com/img",
        "EXPO_PUBLIC_DEBUG_API": "false"
      }
    }
  },
  "submit": {
    "preview": {},
    "production": {}
  }
}