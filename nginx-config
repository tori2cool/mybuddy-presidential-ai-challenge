# /etc/nginx/conf.d/mybuddy-and-me.com.conf
# Serve Expo Web static export + proxy API
# (backend Nginx behind 10.3.3.100)

server {
    listen 443 ssl http2 proxy_protocol;
    server_name mybuddy-and-me.com;

    # TLS
    ssl_certificate     /etc/letsencrypt/live/mybuddy-and-me.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/mybuddy-and-me.com/privkey.pem;   # managed by Certbot
    include /etc/nginx/snippets/ssl-params.conf;

    # Real client IP via PROXY protocol (ONLY trust the front Nginx)
    set_real_ip_from 10.3.3.100;
    real_ip_header proxy_protocol;
    real_ip_recursive on;

    # ----------------------------
    # Expo Web STATIC site
    # ----------------------------
    # Point this at your exported web output folder.
    # Common choices:
    #   - /var/www/mybuddy-and-me/dist
    #   - /opt/mybuddy/web/dist
    root /home/sukitfup/mybuddy/frontend/dist;
    index index.html;

    # Good static caching for hashed assets (Expo export typically fingerprints assets)
    location ~* \.(?:js|css|map|png|jpg|jpeg|gif|svg|ico|webp|avif|woff2?|ttf|otf)$ {
        try_files $uri =404;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000, immutable";
    }

    # SPA fallback (React Navigation / Expo Router on web typically needs this)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # ----------------------------
    # Backend API
    # ----------------------------
    location ^~ /api/ {
        proxy_pass http://127.0.0.1:8000/;

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # (Optional) If your backend supports websockets under /api/,
    # keep upgrade headers (harmless otherwise)
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
}

server {
    listen 80;
    server_name mybuddy-and-me.com;

    # If this Nginx is behind a front proxy doing TLS, you might not need this,
    # but keeping it is fine.
    return 301 https://$host$request_uri;
}
